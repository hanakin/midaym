/* proSilver WP Content Styles
---------------------------------------- */

/* rosilver alterations to accomodate theme integration*/
.navbar { clear:both; }

#search-box { position: relative; float:right; margin-right: 33px; margin-top:-25px; padding-bottom:50px;  }
#search-box input { border-color: #b0b0b0; }
#search-box a { text-shadow:rgba(0, 0, 0, 0.5) 1px 1px 2px; vertical-align: baseline; font-style: inherit; outline: 0; border: 0; padding-left:5px; color:#000; cursor: pointer; font-weight:700; font-size:1.2em; text-transform:uppercase; font-family:"Lucida Grande", Lucida, Verdana, Helvetica, sans-serif; }
#search-box a:hover,
#search-box a:active,
#search-box a:visited { color:#000; }
#search-box #keywords { -webkit-border-radius:100px; padding:5px 20px; background-position: 4px 4px; margin-top: -6px; width:130px; }
#search-box input.button2 { -webkit-border-radius: 0 100px 100px 0; padding:2px 7px 2px 3px; position:relative; float:left; left:169px; z-index:99; margin:-1px 0 0; }

/* Navagation styles - contains the styles that make up the primary navigation: useually contained within the header */

body {
	background-image:url("{T_THEME_PATH}/images/header-bg.jpg");
	background-repeat:repeat-x;
            background-position: left 8px;
            padding: 20px;
}

.span-24 { width: 950px; margin: 0 auto; }

a#wp-logo {
    vertical-align: baseline; 
    font-family: inherit; 
    font-weight: inherit; 
    font-style: inherit; 
    font-size: 100%; 
    outline: 0; 
    padding: 0; 
    margin: -12px 0 0; 
    border: 0;
    background:url("{T_THEME_PATH}/images/decoration.png") no-repeat left -396px;
    display:block;
    float:left;
    height:58px;
    text-indent:-9999px;
    width:195px;
}

/* @group -navagation */

ul#wp-nav {
    vertical-align: baseline; 
    font-family: inherit; 
    font-weight: inherit; 
    font-style: inherit; 
    font-size: 100%; 
    outline: 0; 
    padding: 0; 
    margin: 2px 18px 0 0; 
    border: 0;
    list-style: none;
    float:right;
}

ul#wp-nav li {
    list-style: none; 
    float: left;
    vertical-align: baseline; 
    font-family: inherit; 
    font-weight: inherit; 
    font-style: inherit; 
    font-size: 100%; 
    outline: 0; 
    padding: 0; 
    margin: 0; 
    border: 0;
    margin:0 6px;
}

ul#wp-nav li a {
    vertical-align: baseline; 
    font-style: inherit; 
    outline: 0; 
    border: 0;
    color:#000;
    cursor: pointer;
    display:block;
    font-weight:700;
    font-size:1.2em;
    margin-left:10px;
    padding:8px 10px 10px 0;
    text-shadow:rgba(0, 0, 0, 0.5) 1px 1px 2px;
    text-transform:uppercase;
    font-family:"Lucida Grande", Lucida, Verdana, Helvetica, sans-serif;
	
}

ul#wp-nav li:hover a, 
ul#wp-nav li.current_page_item a {
    background:url("{T_THEME_PATH}/images/decoration.png") no-repeat right -32px;
    color:#FFF;
    text-decoration:none;
}

ul#wp-nav li:hover, 
ul#wp-nav li.current_page_item {
    background:url("{T_THEME_PATH}/images/decoration.png") no-repeat left top;
}

/* @end -navigation */